# SO-VITS-SVC Voice Cloner Configuration

# Project paths
PROJECT_ROOT=.
DATA_DIR=./data
OUTPUT_DIR=./output
MODELS_DIR=./models

# Repository settings
SO_VITS_BRANCH=4.1
SO_VITS_REPO=https://github.com/svc-develop-team/so-vits-svc.git

# Training settings
TRAINING_EPOCHS=100
BATCH_SIZE=16
LEARNING_RATE=0.0001
NUM_WORKERS=4

# Audio settings
SAMPLE_RATE=44100
N_FFT=2048
HOP_LENGTH=512
MONO=true

# GPU settings
CUDA_ENABLED=true
DEVICE=cuda

# Inference settings
F0_METHOD=crepe
NOISE_SCALE=0.4
PITCH_SHIFT=0
